<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wearable.whatsfordinner">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".new_dish_activity"
            android:label="@string/title_activity_new_dish_activity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wearable.whatsfordinner.MainActivity" />
        </activity>
        <activity
            android:name=".Recipes_Activity"
            android:label="@string/title_activity_recipes_"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wearable.whatsfordinner.MainActivity" />
        </activity>
        <activity
            android:name=".groceries_activity"
            android:label="@string/title_activity_groceries_activity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wearable.whatsfordinner.MainActivity" />
        </activity>
        <activity
            android:name=".meals_activity"
            android:label="@string/title_activity_meals_activity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wearable.whatsfordinner.MainActivity" />
        </activity>
        <activity
            android:name=".Ingredients"
            android:label="@string/title_activity_ingredients"
            android:parentActivityName=".new_dish_activity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wearable.whatsfordinner.new_dish_activity" />
        </activity>
        <activity
            android:name=".Cooking_Directions"
            android:label="@string/title_activity_cooking__directions"
            android:parentActivityName=".new_dish_activity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wearable.whatsfordinner.new_dish_activity" />
        </activity>
        <activity
            android:name=".Nutrition_Manager"
            android:label="@string/title_activity_nutrition__manager"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wearable.whatsfordinner.MainActivity" />
        </activity>
    </application>

</manifest>